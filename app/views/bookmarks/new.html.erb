<div class="container mt-5">
  <div class="d-flex justify-content-center">
    <div class="col-12 col-lg-10">
      <h1>Create a new list</h1>
      <%= simple_form_for [ @list, @bookmark ] do |f| %>
      <%= f.association :movie %>
      <%= f.input :comment %>
      <%= f.submit class: 'btn btn-primary mt-2' %>
      <% end %>
    </div>
  </div>
</div>
