
<div class="banner mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
url(http://source.unsplash.com/featured?<%= @list.name %>&<%= rand(1000) %>)">
   <div class="container">
    <div class="d-flex justify-content-center">
      <div class="col-12 text-center align-middle">
        <h1><%= @list.name %></h1>
        <a href="#down"><i class="fas fa-angle-down"></i></a>
        <div id="down">
        </div>
      </div>
    </div>
  </div>
</div>
</div>


<div class="container mt-5">
  <div class="ms-2">
    <%= link_to 'Go back', lists_path, class: 'btn btn-primary btn-sm' %>
    <%= link_to 'Add movie', new_list_bookmark_path(@list), class: 'btn btn-primary btn-sm' %>
  </div>
  <div class="d-flex flex-wrap">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="mt-5 col-12 col-md-6 col-lg-4">
        <div class="card-trip ps-3 pe-3 pb-3 pt-3 m-2">
          <%= link_to '', bookmark_path(bookmark), class: "card-delete fas fa-times", method: :delete, data: { confirm: "Remove #{bookmark.movie.title}?" } %>
          <%= image_tag bookmark.movie.poster_url, alttext: 'movie_image' %>
          <div class="card-trip-infos">
            <div>
              <%= bookmark.movie.title %>
              <br>
              <strong class="red"><%= bookmark.movie.rating %></strong>
                <p><%= bookmark.comment %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
