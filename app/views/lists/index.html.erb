<div class="banner"">
  <div class="container">
    <div class="d-flex justify-content-center">
      <div class="col-12 text-center">
        <h1 class="align-middle">Watch List</h1>
        <p>Select the best titles from all around the world.</p>
        <a href="#down"><i class="fas fa-angle-down"></i></a>
        <div id="down">
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container mt-5">
      <%= link_to 'Add a list', new_list_path, class: 'btn btn-primary' %>
  <div class="d-flex justify-content-center">
    <div class="mt-3 col-12">
      <% @lists.each do |list| %>
        <div class="card-category mt-2 mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
        url(http://source.unsplash.com/featured?<%= list.name %>&<%= rand(1000) %>)">
          <%= list.name %>
          <div>
            <%= link_to '', list_path(list), class: 'card-trip-link' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
